extends base.jade
- load crispy_forms_tags
block title
  | Ilmoittaudu
block content
  h2 Ilmoittaudu

  form(method='POST')
    {% csrf_token %}

    .panel.panel-default
      .panel-heading: strong Ilmoittautuminen

      unless already_enrolled
          {% crispy form %}

          .panel-footer.clearfix
              .btn-group.pull-right
                  button(type='submit').btn.btn-success
                    i.fa.fa-check.kompassi-inline-icon
                    | Ilmoittaudu
      else
          p.text-danger Olet jo ilmoittautunut tähän tapahtumaan.

