extends "core_admin_base.jade"
- load i18n
- load crispy_forms_tags
block title
  {% trans "Teams and organizers" %}
block admin_content
  h3 {% trans "Teams and organizers" %}
  form.form-horizontal(method='POST')
    .panel.panel-default
      .panel-heading: strong
        if form.instance.pk
          {% trans "Edit team member" %}
        else
          {% trans "Add a member to a team" %}
      .panel-body
        {% crispy form %}
      .panel-footer.clearfix
        .btn-group.pull-right
          a.btn.btn-default(href='{% url "intra_organizer_view" event.slug %}') {% trans "Cancel and return" %}
          if form.instance.pk
            button.btn.btn-success(type='submit')
              i.fa.fa-floppy-o.kompassi-icon-space-right
              {% trans "Save changes" %}
          else
            button.btn.btn-success(type='submit')
              i.fa.fa-plus.kompassi-icon-space-right
              {% trans "Add member" %}
