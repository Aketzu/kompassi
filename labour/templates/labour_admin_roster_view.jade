extends base
block title
  | Työvoimatarpeet ja työvuorot
block content_full_width
  .nav.nav-tabs
    include core_admin_menu_items.jade

  .labour-admin-roster-view
    table.table.table-striped.table-bordered
      thead
        th
          | Tehtäväalue
          br
          small Tehtävä
        for hour in event.labour_event_meta.work_hours
          th
            | {{ hour|date:'D' }}
            br
            | {{ hour|date:'H' }}
      tbody
        for job_category in event.jobcategory_set.all
          tr(id='jobcategory-{{ job_category.pk }}')
            td: a(href) {{ job_category.name }}

block extra_scripts
  link(rel='stylesheet', href='{{ STATIC_URL }}labour/css/roster.css')
  script(src='{{ STATIC_URL }}labour/js/roster.js')
