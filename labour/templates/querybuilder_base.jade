- load query_extras

form(method='post', role='form', id='query_builder_form')
    if debug
        - csrf_token
label(for='add_query_filter')
    | Add filter
select(id='add_query_filter')
    option(disabled='disabled', selected='selected') ---
    for key, filter in query_builder_filters
        option(value=key) {{ query_builder_titles|get_item:key }}
pre(id='query_debug')
button(type="button", onclick="query_builder.onUpdateDebug();") Update
button(type="button", onclick="query_builder.onExec();") Exec
if debug
    button(type="button", onclick="query_builder.onExecPlain();") DEBUG-Submit
#query_builder_views

table.table.table-striped#query_results
