tr(id='jobcategory-{{ job_category.pk }}')
  th {{ job_category.name }}
  for total in totals
    td {{ total }}

for job in job_category.job_set.all
  tr
    th: small {{ job.title }}
    for req in job.expanded_requirements
      // TODO put styles in an external css
      td(style='padding: 0')
        input(
          type='number',
          name='cat-{{ req.job.job_category.pk }}-job-{{ req.job.pk }}-req-{{ req.start_time|date:"YmdHis" }}',
          value='{{ req.count }}',
          style='width: 3em; border: none; text-align: center; background-color: transparent'
        )
