extends core_admin_base.jade
- load i18n
block title
  | {% trans "Shirt list" %}
block admin_content
  .panel.panel-default
    .panel-heading: strong {% trans "Shirt size summary" %}
    table.table.table-striped
      thead
        tr
          th {% trans "Shirt type" %}
          th {% trans "Shirt size" %}
          th {% trans "Count" %}
      tbody
        for shirt_size in shirt_sizes
          tr
            td= shirt_size.type
            td= shirt_size
            td= shirt_size.count
    .panel-footer
      {% blocktrans count num_shirts=shirt_sizes_total %}One shirt.{% plural %}{{ num_shirts }} shirts.{% endblocktrans %}

  .panel.panel-default
    .panel-heading: strong {% trans "Shirt orders" %}
    table.table.table-striped
      thead
        tr
          th {% trans "Surname" %}
          th {% trans "First name" %}
          th {% trans "Shirt type" %}
          th {% trans "Shirt size" %}
          th {% trans "Count" %}
      tbody
        for shirt_order in shirt_orders
          tr
            td= shirt_order.order.customer.last_name
            td= shirt_order.order.customer.first_name
            td= shirt_order.size.type
            td= shirt_order.size
            td= shirt_order.count
    .panel-footer
      {% blocktrans count num_shirts=shirt_orders_total %}One shirt.{% plural %}{{ num_shirts }} shirts.{% endblocktrans %}
