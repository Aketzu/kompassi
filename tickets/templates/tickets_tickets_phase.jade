extends tickets_phase_base.jade
- load crispy_forms_tags
block body_text
  h2 Valitse ostettavat tuotteet
block form_content
  p Kirjoita kenttiin, montako mitäkin tuotetta haluat. Voit tilata useita tuotteita samalla kertaa. Sinulla on tilaisuus tarkistaa tiedot vielä myöhemmin ennen kuin vahvistat tilauksen.
  table.table.table-striped.table-bordered
    thead
      tr
        th Tuote
        th Kappalehinta
        th(style='min-width: 80px') Määrä
    tbody
      for iform in form
        tr
          td
            p: strong {{ iform.instance.product.name }}
            p.hidden-phone {{ iform.instance.product.description }}
          td: p.lead {{ iform.instance.product.formatted_price }}
          td
            div
              if iform.instance.product.in_stock
                - crispy iform
              else
                // XXX fugly
                | Loppuunmyyty
