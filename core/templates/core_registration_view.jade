extends base
- load trans from i18n
- load crispy from crispy_forms_tags
block title
  {% trans "Sign up for a Kompassi account" %}
block content
  .core-registration-view
    h2 {% trans "Sign up for a Kompassi account" %}
    form(action='{% url "core_registration_view" %}', method='POST', role='form').form.form-horizontal
      input(type='hidden', name='next', value='{{ next }}')
      - crispy registration_form
      - crispy person_form
