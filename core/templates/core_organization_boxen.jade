- load trans from i18n
h2 {% trans "Organizations using this site" %}
for organizations_row in organizations_rows
  .row
    for organization in organizations_row
      .col-md-3
        .panel.panel-default
          .panel-heading
            strong
              a(href='{% url "core_organization_view" organization.slug %}')= organization.name
          .panel-body
            p= organization.muncipality
            if organization.membership_organization_meta
              if organization.membership_organization_meta.receiving_applications
                .label.label-primary
                  a(href='{% url "core_organization_view" organization.slug %}') {% trans "Membership roster" %}
              else
                .label.label-default {% trans "Membership roster" %}
