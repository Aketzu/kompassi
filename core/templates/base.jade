doctype 5
html
  head
    title {{ settings.KOMPASSI_INSTALLATION_NAME }}
    link(rel='stylesheet', href='{{ STATIC_URL }}bootstrap/bootstrap.min.css')
    link(rel='stylesheet', href='{{ STATIC_URL }}frontend.css')
    link(rel='stylesheet', href='{{ STATIC_URL }}tracon_categories.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button(type="button", class="navbar-toggle", data-toggle="collapse", data-target="#base-navbar-collapse")
            span(class="sr-only") Avaa valikko
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")

          if event
            a.navbar-brand(href='{% url "core_event_view" event.slug %}') {{ event.name }}
          else
            a.navbar-brand(href='{% url "core_frontpage_view" %}') {{ settings.KOMPASSI_INSTALLATION_NAME }}
        .collapse.navbar-collapse#base-navbar-collapse
          ul.nav.navbar-nav
            if event.homepage_url
              li: a(href='{{ event.homepage_url }}') Takaisin {{ event.name_genitive }} sivustolle
          ul.nav.navbar-nav.navbar-right
            if not login_page
              include core_navbar_user.jade

    #wrap
      if messages
        .messages.container
          for message in messages
            if message.tags
              .alert(class="alert-{{ message.tags }}") {{ message|safe }}
            else
              .alert {{ message|safe }}

      include core_page_wizard_progress_bar.jade

      block content_full_width

      .container.content
        block content

      #push

    footer
      .container
        p.credit
          small.text-muted
            if event and event.homepage_url and event.organization_url and event.organization_name
              a(href='{{ event.homepage_url }}', target='_blank') {{ event.name_genitive }}
              |  järjestää
              a(href='{{ event.organization_url }}', target='_blank')  {{ event.organization_name }}
              | .
            | {{ KOMPASSI_APPLICATION_NAME }} &copy; 2009&ndash;2014 Santtu Pajukanta, Jussi Sorjonen, Petri Haikonen, Meeri Panula, Jyrki Launonen ja Pekka Wallendahl.
            a(href='{{ settings.KOMPASSI_PRIVACY_POLICY_URL }}') Rekisteriseloste


    script(src='{{ STATIC_URL }}jquery-1.10.2.min.js')
    script(src='{{ STATIC_URL }}bootstrap/bootstrap.min.js')
    block extra_scripts
